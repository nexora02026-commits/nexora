    <style>
      :root {
        --primary: #0a192f;
        --accent: #6c63ff;
        --white: #ffffff;
        --bg: #f4f7fb;
      }

      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family: "Poppins", sans-serif;
        background: var(--bg);
        color: var(--primary);
        line-height: 1.6;
      }

      /* ===== Header ===== */
      header {
        background: var(--primary);
        color: var(--white);
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1rem 3rem;
        position: sticky;
        top: 0;
        z-index: 1000;
      }

      .logo {
        font-size: 1.8rem;
        font-weight: 700;
      }

      nav {
        display: flex;
        align-items: center;
      }

      .nav-links {
        list-style: none;
        display: flex;
        gap: 2rem;
      }

      .nav-links a {
        color: var(--white);
        text-decoration: none;
        font-weight: 500;
        position: relative;
      }

      .nav-links a::after {
        content: "";
        position: absolute;
        left: 0;
        bottom: -4px;
        width: 0;
        height: 2px;
        background: var(--accent);
        transition: 0.3s;
      }

      .nav-links a:hover::after,
      .nav-links a.active::after {
        width: 100%;
      }

      .nav-links a:hover,
      .nav-links a.active {
        color: var(--accent);
      }

      .hamburger {
        display: none;
        flex-direction: column;
        gap: 5px;
        cursor: pointer;
      }

      .hamburger span {
        width: 26px;
        height: 3px;
        background: white;
        border-radius: 2px;
        transition: 0.3s;
      }

      /* ===== Sections ===== */
      .owner-section {
        padding: 5rem 2rem;
      }

      .container {
        max-width: 1100px;
        margin: auto;
      }

      .owner-section h1 {
        text-align: center;
        font-size: 2.6rem;
        margin-bottom: 3rem;
      }

      /* ===== Info Cards ===== */
      .info-card {
        background: white;
        padding: 2rem;
        border-radius: 18px;
        margin-bottom: 2rem;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.06);
        transition: 0.3s ease;
      }

      .info-card:hover {
        transform: translateY(-6px);
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
      }

      .info-card h2 {
        margin-bottom: 1rem;
        color: var(--accent);
      }

      /* ===== Skills Grid ===== */
      .skills-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
        gap: 2rem;
        margin-top: 2rem;
      }

      .skill-card {
        position: relative;
        background: white;
        padding: 2.2rem 1.5rem;
        border-radius: 20px;
        text-align: center;
        overflow: hidden;
        transition: 0.4s ease;
        border: 1px solid rgba(0, 0, 0, 0.05);
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.05);
        z-index: 1;
      }

      .skill-card::before {
        content: "";
        position: absolute;
        inset: 0;
        background: linear-gradient(135deg, var(--primary), var(--accent));
        opacity: 0;
        transition: 0.4s ease;
        z-index: -1;
      }

      .skill-card span {
        font-size: 2.2rem;
        display: block;
        margin-bottom: 1rem;
        transition: 0.4s;
      }

      .skill-card h3 {
        margin-bottom: 0.5rem;
        font-weight: 600;
        transition: 0.4s;
      }

      .skill-card p {
        font-size: 0.9rem;
        color: #555;
        transition: 0.4s;
      }

      .skill-card:hover {
        transform: translateY(-12px);
        box-shadow: 0 25px 50px rgba(0, 0, 0, 0.15);
      }

      .skill-card:hover::before {
        opacity: 1;
      }

      .skill-card:hover h3,
      .skill-card:hover p,
      .skill-card:hover span {
        color: white;
      }

      /* ===== Certificates Grid ===== */
      .certificates-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 2rem;
        margin-top: 2rem;
      }

      .certificate-card {
        background: white;
        border-radius: 20px;
        overflow: hidden;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.06);
        transition: 0.4s ease;
        display: flex;
        flex-direction: column;
      }

      .certificate-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 25px 50px rgba(0, 0, 0, 0.12);
      }

      .certificate-image {
        width: 100%;
        height: 220px;
        overflow: hidden;
        border-radius: 15px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: #f4f7fb;
      }

      .certificate-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        border-radius: 15px;
        transition: transform 0.4s ease;
      }

      .certificate-card:hover img {
        transform: scale(1.05);
      }

      .certificate-content {
        padding: 1.5rem;
        text-align: center;
      }

      .certificate-content h3 {
        font-size: 1.1rem;
        margin-bottom: 0.5rem;
        color: var(--primary);
      }

      .certificate-content p {
        font-size: 0.9rem;
        color: #555;
        margin-bottom: 0.7rem;
      }

      .certificate-content span {
        font-size: 0.85rem;
        font-weight: 600;
        color: var(--accent);
      }

      /* ===== Responsive ===== */
      @media (max-width: 768px) {
        header {
          padding: 1rem 1.5rem;
        }
        .nav-links {
          position: fixed;
          top: 0;
          right: -100%;
          width: 100%;
          height: 100vh;
          background: var(--primary);
          flex-direction: column;
          justify-content: center;
          align-items: center;
          transition: 0.4s;
        }
        .nav-links.show {
          right: 0;
        }
        .hamburger {
          display: flex;
        }
        .skills-grid,
        .certificates-grid {
          grid-template-columns: 1fr;
        }
      }
    </style>
  </head>

