<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>NEXORA - Contact</title>
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet" />
  <style>
    :root {
      --primary: #0a192f;
      --secondary: #00e5ff;
      --accent: #6c63ff;
      --bg: #f8fafc;
      --white: #fff;
    }
    * { margin:0; padding:0; box-sizing:border-box; }
    body {
      font-family: "Poppins", sans-serif;
      background: var(--bg);
      color: var(--primary);
      line-height:1.6;
    }

    /* Header */
    header {
      background: var(--primary);
      color: var(--white);
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 1rem 2rem;
      position: sticky;
      top:0;
      z-index:1000;
      flex-wrap: wrap;
    }
    header .logo { font-size:1.8rem; font-weight:700; }
    header nav ul { list-style:none; display:flex; gap:1.5rem; flex-wrap:wrap; }
    header nav ul li a { color:var(--white); text-decoration:none; font-weight:500; transition:0.3s; }
    header nav ul li a:hover { color:var(--accent); }

    /* Hero */
    .hero {
      height: 40vh;
      display:flex;
      flex-direction:column;
      justify-content:center;
      align-items:center;
      text-align:center;
      background: linear-gradient(135deg, var(--primary), var(--accent));
      color: var(--white);
      padding: 0 1rem;
    }
    .hero h1 { font-size:3rem; margin-bottom:1rem; }
    .hero p { font-size:1.2rem; }

    /* Contact Section */
    .contact-section {
      max-width: 900px;
      width: 100%;
      margin: 4rem auto;
      padding: 0 1rem;
    }
    .contact-section h2 {
      text-align:center;
      font-size:2.8rem;
      margin-bottom:2.5rem;
      color: var(--primary);
    }

    form {
      width: 100%;
      background: var(--white);
      padding: 2.5rem;
      border-radius: 15px;
      box-shadow: 0 15px 35px rgba(0,0,0,0.1);
      display: flex;
      flex-direction: column;
      gap: 1.5rem;
    }
    input, textarea {
      width: 100%;
      padding: 1rem;
      border: 2px solid #ddd;
      border-radius: 10px;
      font-size:1rem;
      transition:0.3s;
    }
    input:focus, textarea:focus { border-color: var(--accent); outline:none; }
    textarea { resize:none; height:150px; }

    /* Package Cards */
    .package-options {
      display: flex;
      gap: 1rem;
      flex-wrap: wrap;
      margin-top:0.5rem;
    }
    .package-card {
      flex:1;
      padding:1rem 1.2rem;
      border:2px solid #ddd;
      border-radius:10px;
      text-align:center;
      cursor:pointer;
      transition:0.3s;
      user-select:none;
    }
    .package-card:hover { border-color:var(--accent); background:rgba(108,99,255,0.05); }
    .package-card input { display:none; }
    .package-card.selected { border-color: var(--accent); background: rgba(0,229,255,0.1); }

    button {
      background: var(--secondary);
      color: var(--primary);
      padding: 1rem 2rem;
      border:none;
      border-radius:10px;
      font-weight:600;
      font-size:1.1rem;
      cursor:pointer;
      transition:0.3s;
    }
    button:hover {
      background: var(--accent);
      color: var(--white);
      transform: translateY(-3px);
    }

    #formMessage {
      text-align:center;
      font-weight:600;
      margin-top:1rem;
    }

    /* Footer */
    footer {
      background: var(--primary);
      color: var(--white);
      padding:3rem 2rem;
      text-align:center;
      margin-top:4rem;
    }
    footer a {
      color: var(--accent);
      margin:0 0.5rem;
      text-decoration:none;
      transition:0.3s;
    }
    footer a:hover { text-decoration:underline; }

    @media (max-width:768px) {
      .hero h1 { font-size:2.2rem; }
      .hero p { font-size:1.1rem; }
      header { flex-direction:column; gap:1rem; }
      .package-options { flex-direction: column; }
    }
  </style>
</head>
<body>
  <!-- Header -->
  <header>
    <div class="logo">NEXORA</div>
    <nav>
      <ul>
        <li><a href="/">Home</a></li>
        <li><a href="/packages">Packages</a></li>
        <li><a href="/portfolio">Portfolio</a></li>
        <li><a href="/about">About</a></li>
        <li><a href="#contact">Contact</a></li>
      </ul>
    </nav>
  </header>

  <!-- Hero -->
  <section class="hero">
    <h1>Get in Touch</h1>
    <p>Choose your package and send us your details</p>
  </section>

  <!-- Contact Form -->
  <section class="contact-section">
    <h2>Contact Us</h2>
    <form id="contactForm">
      <input type="text" name="name" placeholder="Your Name" required />
      <input type="email" name="email" placeholder="Your Email" required />

      <div>
        <p><strong>Select Package:</strong></p>
        <div class="package-options">
          <label class="package-card">
            <input type="radio" name="package" value="البداية" required /> البداية
          </label>
          <label class="package-card">
            <input type="radio" name="package" value="نجاح" /> نجاح
          </label>
          <label class="package-card">
            <input type="radio" name="package" value="قمة" /> قمة
          </label>
        </div>
      </div>

      <textarea name="message" placeholder="Additional details or questions"></textarea>

      <button type="submit">Send Message</button>
      <p id="formMessage"></p>
    </form>
  </section>

  <!-- Footer -->
  <footer>
    <p>&copy; 2026 NEXORA. All Rights Reserved.</p>
    <div>
      <a href="https://www.instagram.com/nexora_1000/">Instagram</a>
      <a href="https://www.tiktok.com/@nexora_100">TikTok</a>
    </div>
  </footer>

  <script>
    // Package cards selection
    const cards = document.querySelectorAll(".package-card");
    cards.forEach(card => {
      card.addEventListener("click", () => {
        cards.forEach(c => c.classList.remove("selected"));
        card.classList.add("selected");
        card.querySelector("input").checked = true;
      });
    });

    // Form submission via Formspree
    const form = document.getElementById("contactForm");
    const formMessage = document.getElementById("formMessage");

    form.addEventListener("submit", async (e) => {
      e.preventDefault();
      const formData = new FormData(form);

      try {
        const response = await fetch("https://formspree.io/f/xdazrdqe", {
          method: "POST",
          headers: { Accept: "application/json" },
          body: formData
        });

        if (response.ok) {
          formMessage.textContent = "✅ Message sent successfully!";
          formMessage.style.color = "green";
          form.reset();
          cards.forEach(c => c.classList.remove("selected"));
        } else {
          formMessage.textContent = "❌ Error sending message. Try again!";
          formMessage.style.color = "red";
        }
      } catch (error) {
        console.error(error);
        formMessage.textContent = "❌ Error sending message. Try again!";
        formMessage.style.color = "red";
      }
    });
  </script>
</body>
</html>
