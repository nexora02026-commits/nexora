<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>NEXORA - Contact</title>
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap"
      rel="stylesheet"
    />
    <style>
      :root {
        --primary: #0a192f;
        --secondary: #00e5ff;
        --accent: #6c63ff;
        --bg: #f8fafc;
        --white: #fff;
      }
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }
      body {
        font-family: "Poppins", sans-serif;
        background: var(--bg);
        color: var(--primary);
        line-height: 1.6;
      }

      .hero {
        height: 40vh;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        text-align: center;
        background: linear-gradient(135deg, var(--primary), var(--accent));
        color: var(--white);
        padding: 0 1rem;
      }
      .hero h1 {
        font-size: 3rem;
        margin-bottom: 1rem;
      }
      .hero p {
        font-size: 1.2rem;
      }

      .contact-section {
        max-width: 900px;
        width: 100%;
        margin: 4rem auto;
        padding: 0 1rem;
      }
      .contact-section h2 {
        text-align: center;
        font-size: 2.8rem;
        margin-bottom: 2.5rem;
      }

      form {
        width: 100%;
        background: var(--white);
        padding: 2.5rem;
        border-radius: 15px;
        box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
      }

      input,
      textarea {
        width: 100%;
        padding: 1rem;
        border: 2px solid #ddd;
        border-radius: 10px;
        font-size: 1rem;
        transition: 0.3s;
      }
      input:focus,
      textarea:focus {
        border-color: var(--accent);
        outline: none;
      }

      textarea {
        resize: none;
        height: 150px;
      }

      .email-error {
        color: red;
        font-size: 0.9rem;
        margin-top: -10px;
      }

      .package-options {
        display: flex;
        gap: 1rem;
        flex-wrap: wrap;
      }
      .package-card {
        flex: 1;
        padding: 1rem 1.2rem;
        border: 2px solid #ddd;
        border-radius: 10px;
        text-align: center;
        cursor: pointer;
        transition: 0.3s;
        user-select: none;
      }
      .package-card:hover {
        border-color: var(--accent);
      }
      .package-card input {
        display: none;
      }
      .package-card.selected {
        border-color: var(--accent);
        background: rgba(0, 229, 255, 0.1);
      }

      button {
        background: var(--secondary);
        color: var(--primary);
        padding: 1rem 2rem;
        border: none;
        border-radius: 10px;
        font-weight: 600;
        font-size: 1.1rem;
        cursor: pointer;
        transition: 0.3s;
      }
      button:hover {
        background: var(--accent);
        color: var(--white);
        transform: translateY(-3px);
      }

      #formMessage {
        text-align: center;
        font-weight: 600;
      }

      footer {
        background: var(--primary);
        color: var(--white);
        padding: 3rem 2rem;
        text-align: center;
        margin-top: 4rem;
      }
      footer a {
        color: var(--accent);
        margin: 0 0.5rem;
        text-decoration: none;
      }
    </style>
  </head>

  <body>
    <header>
      <div class="logo">NEXORA</div>
      <nav>
        <ul class="nav-links">
          <li><a href="/">Home</a></li>
          <li><a href="/packages">Packages</a></li>
          <li><a href="/portfolio">Portfolio</a></li>
          <li><a href="/about">About</a></li>
          <li><a href="/contact" class="active">Contact</a></li>
        </ul>
        <div class="hamburger">
          <span></span>
          <span></span>
          <span></span>
        </div>
      </nav>
    </header>

    <style>
      :root {
        --primary: #0a192f;
        --accent: #6c63ff;
        --white: #fff;
      }

      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      header {
        background: var(--primary);
        color: var(--white);
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1rem 3rem;
        position: sticky;
        top: 0;
        z-index: 1000;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
      }

      .logo {
        font-size: 2rem;
        font-weight: 700;
        letter-spacing: 1px;
        cursor: pointer;
      }

      nav {
        display: flex;
        align-items: center;
      }

      .nav-links {
        list-style: none;
        display: flex;
        gap: 2rem;
      }

      .nav-links li a {
        color: var(--white);
        text-decoration: none;
        font-weight: 500;
        padding: 0.3rem 0;
        position: relative;
        transition: color 0.3s;
      }

      .nav-links li a::after {
        content: "";
        position: absolute;
        left: 0;
        bottom: -3px;
        width: 0;
        height: 2px;
        background: var(--accent);
        transition: width 0.3s;
      }

      .nav-links li a:hover::after,
      .nav-links li a.active::after {
        width: 100%;
      }

      .nav-links li a:hover,
      .nav-links li a.active {
        color: var(--accent);
      }

      .hamburger {
        display: none;
        flex-direction: column;
        gap: 5px;
        cursor: pointer;
        margin-left: 1rem;
        z-index: 1100;
      }

      .hamburger span {
        width: 28px;
        height: 3px;
        background: var(--white);
        border-radius: 2px;
        transition: all 0.4s ease;
      }

      /* Mobile menu */
      @media (max-width: 768px) {
        .nav-links {
          position: fixed;
          top: 0;
          right: -100%;
          width: 100%;
          height: 100vh;
          background: rgba(10, 25, 47, 0.95);
          backdrop-filter: blur(5px);
          flex-direction: column;
          justify-content: center;
          align-items: center;
          gap: 2rem;
          transition: right 0.5s ease;
          z-index: 1000;
        }

        .nav-links.show {
          right: 0;
        }

        .nav-links li {
          opacity: 0;
          transform: translateX(50px);
          transition: all 0.4s ease;
        }

        .nav-links.show li {
          opacity: 1;
          transform: translateX(0);
        }

        .hamburger {
          display: flex;
        }

        .hamburger.active span:nth-child(1) {
          transform: rotate(45deg) translate(5px, 5px);
        }

        .hamburger.active span:nth-child(2) {
          opacity: 0;
        }

        .hamburger.active span:nth-child(3) {
          transform: rotate(-45deg) translate(5px, -5px);
        }
      }
    </style>

    <script>
      const hamburger = document.querySelector(".hamburger");
      const navLinks = document.querySelector(".nav-links");

      hamburger.addEventListener("click", () => {
        navLinks.classList.toggle("show");
        hamburger.classList.toggle("active");

        const links = navLinks.querySelectorAll("li");
        links.forEach((link, index) => {
          if (navLinks.classList.contains("show")) {
            link.style.transitionDelay = `${index * 0.1 + 0.2}s`;
          } else {
            link.style.transitionDelay = `0s`;
          }
        });
      });
    </script>

    <section class="hero">
      <h1>Get in Touch</h1>
      <p>Choose your package and send us your details</p>
    </section>

    <section class="contact-section" id="contact">
      <h2>Contact Us</h2>

      <form id="contactForm">
        <input type="text" name="name" placeholder="Your Name" required />

        <input
          class="ea"
          type="email"
          name="email"
          placeholder="Your Email"
          required
        />
        <div class="email-error"></div>

        <div>
          <p><strong>Select Package:</strong></p>
          <div class="package-options">
            <label class="package-card">
              <input type="radio" name="package" value="البداية" required />
              البداية
            </label>
            <label class="package-card">
              <input type="radio" name="package" value="نجاح" />
              نجاح
            </label>
            <label class="package-card">
              <input type="radio" name="package" value="قمة" />
              قمة
            </label>
          </div>
        </div>

        <textarea
          name="message"
          placeholder="Additional details or questions"
        ></textarea>

        <button type="submit">Send Message</button>

        <p id="formMessage"></p>
      </form>
    </section>

    <footer>
      <p>&copy; 2026 NEXORA. All Rights Reserved.</p>
      <div>
        <a href="https://www.instagram.com/nexora_1000/">Instagram</a>
        <a href="https://www.tiktok.com/@nexora_100">TikTok</a>
      </div>
    </footer>

    <script>
      const cards = document.querySelectorAll(".package-card");
      const form = document.getElementById("contactForm");
      const formMessage = document.getElementById("formMessage");
      const emailInput = document.querySelector(".ea");
      const error = document.querySelector(".email-error");

      const pattern = /^[\w.%+-]+@(?:[\w-]+\.)+\w{2,}$/i;

      cards.forEach((card) => {
        card.addEventListener("click", () => {
          cards.forEach((c) => c.classList.remove("selected"));
          card.classList.add("selected");
          card.querySelector("input").checked = true;
        });
      });

      emailInput.addEventListener("input", () => {
        if (!pattern.test(emailInput.value.trim())) {
          error.textContent = "اكتب بريد إلكتروني صحيح";
        } else {
          error.textContent = "";
        }
      });

      form.addEventListener("submit", async (e) => {
        e.preventDefault();

        const email = emailInput.value.trim();

        if (!pattern.test(email)) {
          error.textContent = "اكتب بريد إلكتروني صحيح";
          emailInput.focus();
          return;
        }

        const formData = new FormData(form);

        formMessage.textContent = "⏳ Sending...";

        try {
          const response = await fetch("https://formspree.io/f/xdazrdqe", {
            method: "POST",
            headers: { Accept: "application/json" },
            body: formData,
          });

          if (response.ok) {
            formMessage.textContent = "✅ Message sent successfully!";
            formMessage.style.color = "green";
            form.reset();
            cards.forEach((c) => c.classList.remove("selected"));
          } else {
            throw new Error();
          }
        } catch {
          formMessage.textContent = "❌ Error sending message. Try again!";
          formMessage.style.color = "red";
        }
      });
    </script>
  </body>
</html>
